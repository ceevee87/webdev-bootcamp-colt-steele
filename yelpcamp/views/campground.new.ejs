<% include partials/header %>

<div class="container">
    <div class="row"> 
        <p><h1 style="text-align: center;">New Campground</h1></p>
        <div style="width:30%; margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <!--User input: type in name of new campground-->
                    <label style="width:100%">Campground name
                        <input class="form-control" type="text" name="campground[name]"></input>
                    </label>
                </div>
                    
                <div class="form-group">
                    <!--User input: nightly price-->
                    <label style="width:100%">Price/night
                        <input class="form-control" type="number" min="0.00" 
                                step="0.10" name="campground[price]">
                        </input>
                    </label>
                </div>
                    
                <div class="form-group">
                    <!--User input: supply URL that points to a picture of the campground.-->
                    <label style="width:100%">URL
                        <input class="form-control" type="text" name="campground[image]"></input>
                    </label>
                </div>

                <div class="form-group">
                    <!--User input: supply URL that points to a picture of the campground.-->
                    <label style="width:100%">Description
                        <input class="form-control" type="text" 
                        name="campground[description]"></input>
                    </label>
                </div>

                <div class="form-group">
                    <!--User input: hit the submit button.-->
                    <button class="btn btn-md btn-primary" type="submit">Submit!!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>