<% include partials/header %>
<h1>Details!!</h1>

<div><%= campground.name %> </div>
<image src="<%= campground.image%>">
<div><%= campground.description %> </div>

<p>
    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add a Comment</a>
</p>
<h2>Comments</h2>
<ul>
    <% campground.comments.forEach(function(comment) { %>
        <li><strong><%=comment.author%></strong> - <%=comment.text%></li>
    <%});%>
</ul>

<% include partials/footer %>
